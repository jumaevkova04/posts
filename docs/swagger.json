                "name",
                "nonce",
                "password",
                "surname"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "example@gmail.com"
                },
                "name": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 2,
                    "example": "John"
                },
                "nonce": {
                    "type": "string",
                    "example": "exampleNonce"
                },
                "password": {
                    "description": "`min: one uppercase letter, one lowercase letter, one digit, one special character`",
                    "type": "string",
                    "maxLength": 64,
                    "minLength": 8,
                    "example": "p@ssW0rd"
                },
                "patronymic": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 2,
                    "example": "Adams"
                },
                "surname": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 2,
                    "example": "Doe"
                }
            }
